<% content_for :page_title, @post.title %>

<section class="section">
    <div class="container">
        <nav class="level">
            <div class="level-left">
                <p class="level-item">
                    <strong>Actions</strong>
                </p>
            </div>
            <div class="level-right">
                <p class="level-item">
                    <%= link_to "Edit", edit_post_path(@post), class: "button is-warning" %>
                </p>
                <p class="level-item">
                    <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?!" }, class: "button is-danger" %>
                </p>
            </div>
        </nav>
        <hr>
        <div class="content">
            <%= @post.content %>
        </div>
    </div>
</section>

<section class="section comment">
    <div class="container">
        <div class="subtitle is-5">
            <strong><%= @post.comments.count %> Commnets</strong>
            <%= render @post.comments  %>
            <div class="comment-form">
                <hr>
                <h3 class="subtitile is-3">
                    Leave a reply
                </h3>
                <%= render 'comments/form' %>
            </div>
        </div>
    </div>
</section>